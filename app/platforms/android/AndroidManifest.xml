<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noplanbees.tbm"
    android:versionCode="30"
    android:versionName="2.21" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAPTURE_VIDEO_OUTPUT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.noplanbees.tbm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.noplanbees.tbm.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.SEND" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:hardwareAccelerated="true"
        android:name="com.noplanbees.tbm.TbmApplication">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.noplanbees.tbm.ui.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="TouchTestActivity" />
        <activity
            android:name="RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="LockScreenAlertActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <service
            android:name="FileUploadService"
            android:process=":FileUploadService" />
        <!--
                 I had upload and download services running in a different process so that termination of 
                 HomeActivity would not interfere but that made it difficult to reach the class method
                 restartTransfersPendingRetry in FileTransferService from the HomeActivity.
        -->
        <!-- android:process=":FileUploadService" -->
        <service
            android:name=".FileDownloadService"
            android:process=":FileDownloadService" />
        <!-- android:process=":FileDownloadService" -->

        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.noplanbees.tbm" />
            </intent-filter>
        </receiver>

        <service
            android:name=".TestService"
            android:process=":remote" />
        <service android:name=".GcmIntentService" />
        
                <service
            android:name="com.noplanbees.tbm.DataHolderService" />
        
        <service
            android:name="com.noplanbees.tbm.network.FileUploadService"
            android:process=":FileUploadService" />
        <service
            android:name="com.noplanbees.tbm.network.FileDownloadService"
            android:process=":FileDownloadService" />
                
                
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <ripple android:color="@color/green">
            <item>
                <shape >
                    <corners android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/dlg_inpt_grey"/>
                    <solid android:color="@color/dialog_btn_body_bg"/>
                    <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">

    <TextView
        android:id="@+id/tw_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/dialog_textcolor"
        android:text="@string/enter_code_dlg_msg" />

    <TextView
        android:id="@+id/tw_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/dialog_textcolor"
        android:text="@string/enter_code_dlg_helper"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/dlg_input_bg"
        android:textColor="@color/dialog_textcolor"
        android:padding="5dp"
        android:inputType="number"
        android:textCursorDrawable="@null">

        <requestFocus />
    </EditText>

    <TextView
            android:id="@+id/call_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/enter_code_dlg_button_call"
            android:textColor="@color/dialog_action_text"
            android:textAllCaps="false"
            android:background="@drawable/enter_code_call_btn_bg"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:clickable="true"
            />

</LinearLayout>

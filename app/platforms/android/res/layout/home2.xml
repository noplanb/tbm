<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    
    <GridView android:id="@+id/main_grid">
        
    </GridView>
    
    <RelativeLayout
        android:id="@+id/bench_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/charcoal" >

        <com.noplanbees.tbm.ContactsAutoCompleteTextView
            android:id="@+id/contacts_auto_complete_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="Search"
            android:textColor="@color/white" />

        <ListView
            android:id="@+id/bench_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/contacts_auto_complete_text_view" >

            <requestFocus />
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_phone_number_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/charcoal"
        android:textColor="@color/white"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/select_phone_number_title"
            style="@style/dialog_title"
            android:layout_alignParentTop="true" />

        <ListView
            android:id="@+id/select_phone_number_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/select_phone_number_title" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:shrinkColumns="0,1,2"
    android:stretchColumns="0,1,2" >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <VideoView
            android:id="@+id/VideoView0"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <VideoView
            android:id="@+id/VideoView1"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <VideoView
            android:id="@+id/VideoView2"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <VideoView
            android:id="@+id/VideoView3"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <FrameLayout
            android:id="@+id/camera_preview_frame"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" >

            <com.noplanbees.tbm.CameraOverlay
                android:id="@+id/camera_overlay_surface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <com.noplanbees.tbm.CameraPreview
                android:id="@+id/camera_preview_surface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <VideoView
            android:id="@+id/VideoView4"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <VideoView
            android:id="@+id/VideoView5"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <VideoView
            android:id="@+id/VideoView6"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <VideoView
            android:id="@+id/VideoView7"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="118dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnUpload"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload" />

        <FrameLayout
            android:id="@+id/drawTest"
            style="@style/videoView"
            android:layout_width="0dp"
            android:layout_height="50dp">
        </FrameLayout>
    </TableRow>

</TableLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:background="@color/beige_background"
    android:shrinkColumns="0,1,2"
    android:stretchColumns="0,1,2" >

    <TableRow>

        <FrameLayout
            android:id="@+id/Frame7"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView7"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView7"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText7"
                style="@style/plusText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame6"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView6"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView6"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText6"
                style="@style/plusText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame3"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView3"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView3"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText3"
                style="@style/plusText" />
        </FrameLayout>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/nameText7"
            style="@style/nameText" />

        <TextView
            android:id="@+id/nameText6"
            style="@style/nameText" />

        <TextView
            android:id="@+id/nameText3"
            style="@style/nameText" />
    </TableRow>

    <TableRow>

        <FrameLayout
            android:id="@+id/Frame5"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView5"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView5"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText5"
                style="@style/plusText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/camera_preview_frame"
            style="@style/vFrame" >

            <com.noplanbees.tbm.CameraOverlay
                android:id="@+id/camera_overlay_surface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <com.noplanbees.tbm.CameraPreview
                android:id="@+id/camera_preview_surface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame0"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView0"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView0"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText0"
                style="@style/plusText" />
        </FrameLayout>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/nameText5"
            style="@style/nameText" />

        <TextView 
            android:id="@+id/previewText"
            style="@style/nameText" />

        <TextView
            android:id="@+id/nameText0"
            style="@style/nameText" />
    </TableRow>

    <TableRow>

        <FrameLayout
            android:id="@+id/Frame4"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView4"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView4"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText4"
                style="@style/plusText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame2"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView2"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView2"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText2"
                style="@style/plusText" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame1"
            style="@style/vFrame" >

            <ImageView
                android:id="@+id/ThumbView1"
                style="@style/videoView" />

            <VideoView
                android:id="@+id/VideoView1"
                style="@style/videoView" />

            <TextView
                android:id="@+id/PlusText1"
                style="@style/plusText" />
        </FrameLayout>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/nameText4"
            style="@style/nameText" />

        <TextView
            android:id="@+id/nameText2"
            style="@style/nameText" />

        <TextView
            android:id="@+id/nameText1"
            style="@style/nameText" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnReset"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset" />
    </TableRow>

</TableLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg"
    android:orientation="vertical"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/zazo_type_white" />

    <EditText
        android:id="@+id/first_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/registration_input_bg"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/white"
        android:textSize="22dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/last_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/registration_input_bg"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/white"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.noplanbees.tbm.ui.view.SignEditText
                android:id="@+id/country_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/registration_input_bg"
                android:ems="3"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/cc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:text="(Country Code)"
                android:textColor="@android:color/white"
                android:textSize="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/mobile_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/registration_input_bg"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:id="@+id/enter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_btn_bg"
        android:layout_marginTop="20dp"
        android:text="Enter"
        android:textColor="@android:color/white"
        android:textSize="22dp" />

    <Button
        android:id="@+id/debug_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_btn_bg"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:text="Debug" />

</LinearLayout>
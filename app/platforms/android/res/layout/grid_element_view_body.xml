<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@color/bg_name">

    <LinearLayout
            android:id="@+id/buttons_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tw_name"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tw_nudge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_empty_friend"
                android:gravity="center"
                android:text="@string/nudge"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tw_record"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_weight="1"
                android:background="@color/bg_empty_friend"
                android:gravity="center"
                android:text="@string/record"
                android:textColor="@color/bg_unread_msg_count"
                android:textSize="16sp"
                android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:clipChildren="true">
        <ImageView
                android:id="@+id/img_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible"/>
    </RelativeLayout>


    <TextView
            android:id="@+id/tw_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/bg_name"
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="Firstnameisverylongandshouldbetruncated Firstnameisverylongandshouldbetruncated  "
            android:textColor="@color/color_name"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

    <View
            android:id="@+id/unread_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/friend_body_unread_border"/>

    <com.zazoapp.client.ui.view.StatusIndicator
            android:id="@+id/img_viewed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@color/bg_unread_msg"
            android:scaleType="fitCenter"
            android:src="@drawable/viewed"
            android:visibility="gone"/>

    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"/>

    <com.zazoapp.client.ui.view.StatusIndicator
            android:id="@+id/img_uploading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/bg_uploading"
            android:scaleType="fitCenter"
            android:src="@drawable/uploading"
            android:visibility="invisible"/>

    <com.zazoapp.client.ui.view.StatusIndicator
            android:id="@+id/img_downloading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/bg_uploading"
            android:scaleType="fitCenter"
            android:src="@drawable/downloading"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/tw_unread_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_red_circle"
            android:padding="2dp"
            android:gravity="center"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="11dp"
            android:singleLine="true"
            android:visibility="invisible"/>

</RelativeLayout>

    
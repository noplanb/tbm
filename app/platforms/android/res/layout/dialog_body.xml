<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_bg"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="TextView"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:id="@+id/dlg_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_body_bg"
        android:padding="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dlg_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
         	android:visibility="gone"
            android:textColor="@color/dialog_textcolor"
            android:text="TextView" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_btn_body_bg" >

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@android:string/cancel"
            android:textColor="@color/dialog_textcolor"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/dialog_border" />

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@android:string/ok"
            android:textColor="@color/dialog_textcolor"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
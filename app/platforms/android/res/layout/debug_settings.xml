<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main">

    <TextView
            android:id="@+id/version_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Version: "
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/version_label"
            android:layout_alignBaseline="@id/version_label"
            android:layout_marginLeft="20dp"
            android:text="0.1"
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/build_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/version_label"
            android:text="Build: "
            android:textColor="@android:color/white"/>

    <TextView
            android:id="@+id/build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/build_label"
            android:layout_alignBaseline="@id/build_label"
            android:layout_alignLeft="@id/version"
            android:text="00000000"
            android:textColor="@android:color/white"/>

    <Switch
            android:id="@+id/debug_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug mode"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/build_label"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            <TableRow>
                <TextView
                        android:id="@+id/version_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version: "
                        android:textColor="@android:color/white"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/version_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0.1"
                            android:textColor="@android:color/white"/>

                    <TextView
                            android:id="@+id/version_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="10"
                            android:textColor="@android:color/white"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                        android:id="@+id/user_info_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User:"
                        android:textColor="@android:color/white"/>
                <TextView
                        android:id="@+id/user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="User info\n"
                        android:textColor="@android:color/white"/>
                <Button
                        android:id="@+id/user_info_dispatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispatch"
                        android:layout_gravity="center|right"
                        android:textColor="@android:color/white"/>
            </TableRow>
            <TableRow>
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"/>
                <Button
                        android:id="@+id/user_info_backup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Backup"
                        android:layout_gravity="center|right"
                        android:textColor="@android:color/white"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Clear user data (friends, videos)"
                        android:textColor="@android:color/white"
                        android:layout_span="2"/>
                <Button
                        android:id="@+id/clear_user_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear"
                        android:layout_gravity="center|right"
                        android:textColor="@android:color/white"/>
            </TableRow>
        </TableLayout>

        <Switch
                android:id="@+id/debug_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debug mode"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"/>
        <LinearLayout
                android:id="@+id/crash_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crash in main thread"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"/>
                <Button
                        android:id="@+id/crash_main_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Throw"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crash in background thread"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"/>
                <Button
                        android:id="@+id/crash_thread_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Throw"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <Switch
                android:id="@+id/send_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send real sms"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"/>

        <Switch
                android:id="@+id/use_rear_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use rear camera"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"/>

        <Switch
                android:id="@+id/custom_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use custom server"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:enabled="false"/>

        <LinearLayout
                android:id="@+id/server_host_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/server_host_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Server host: "
                    android:textColor="@android:color/white"/>

            <EditText
                    android:id="@+id/server_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/server_host_label"
                    android:layout_marginLeft="20dp"
                    android:inputType="textNoSuggestions"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/server_uri_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/server_uri_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server uri: "
                    android:textColor="@android:color/white"/>

            <EditText
                    android:id="@+id/server_uri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/server_uri_label"
                    android:layout_marginLeft="20dp"
                    android:inputType="textNoSuggestions"
                    android:textColor="@android:color/white"/>
        </LinearLayout>

        <Switch
                android:id="@+id/send_broken_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send broken video"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset tutorial hints"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"/>
            <Button
                    android:id="@+id/reset_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
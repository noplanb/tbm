<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/bg_uploading"
            android:textStyle="bold"
            android:background="@color/bg_empty_friend"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:text="@string/nudge"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/bg_unread_msg_count"
            android:textStyle="bold"
            android:background="@color/bg_empty_friend"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/record"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
</LinearLayout>

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tw_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/bg_name"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="@color/color_name" />
    

    <ImageView
        android:id="@+id/img_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/viewed"
        android:background="@color/bg_unread_msg"
        android:scaleType="center"
        android:layout_gravity="right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_downloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downloading"
        android:background="@color/bg_unread_msg"
        android:scaleType="center"
        android:layout_gravity="right"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_uploading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/uploading"
        android:background="@color/bg_uploading"
        android:scaleType="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tw_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_circle"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:text="1"
        android:paddingLeft="7dp"
        android:paddingTop="2dp"
        android:paddingRight="7dp"
        android:paddingBottom="2dp"
        android:layout_gravity="right"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp" 
        />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp" 
        android:layout_gravity="right"
        />
    
</FrameLayout>

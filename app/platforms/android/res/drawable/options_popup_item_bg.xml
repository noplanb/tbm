<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true"
          android:state_last="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/popup_radius"/>
            <solid android:color="@color/black_overlay"/>
        </shape>
    </item>
    <item android:state_first="true"
            android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/popup_radius"
                     android:topRightRadius="@dimen/popup_radius"/>
            <solid android:color="@color/black_overlay"/>
        </shape>
    </item>
    <item android:state_last="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/popup_radius"
                     android:bottomRightRadius="@dimen/popup_radius"/>
            <solid android:color="@color/black_overlay"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_overlay"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
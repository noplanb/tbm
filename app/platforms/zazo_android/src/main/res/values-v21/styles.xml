<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- To Make Navigation Drawer Fill Status Bar and become Transparent Too -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_main_color</item>
    </style>

    <style name="DebugTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/light_grey_new</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- To Make Navigation Drawer Fill Status Bar and become Transparent Too -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- To Make Navigation Drawer Fill Status Bar and become Transparent Too -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_main_color</item>
        <item name="colorAccent">@color/accent_2</item>
        <item name="android:navigationBarColor">@color/black</item><!--#144C96-->
    </style>

    <style name="AppTheme.ActionBar">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.SwitchCompat">
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="DebugTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light_grey_new</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- To Make Navigation Drawer Fill Status Bar and become Transparent Too -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_dev_color</item>
        <item name="android:dialogTheme">@style/DevDialog</item>
        <item name="android:editTextStyle">@style/DevEditText</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textColor">@color/contacts_name_text</item>
        <item name="android:background">@null</item>
    </style>
</resources>
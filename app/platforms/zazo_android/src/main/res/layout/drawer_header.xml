<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:background="@color/primary"
              >

    <RelativeLayout
            android:id="@+id/drawer_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/repeat_background">

        <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_scrim"
                android:layout_alignTop="@+id/account_info_layout"
                android:layout_alignBottom="@id/account_info_layout"/>

        <LinearLayout
                android:id="@id/account_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/account_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_account_circle_white"
                        android:layout_marginBottom="10dp"/>
                <com.zazoapp.client.ui.view.ShadowedStatusLayout
                        android:layout_width="@dimen/grid_item_status_icon_size"
                        android:layout_height="@dimen/grid_item_status_icon_size"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="1dp"
                        app:gradient_center_color="#AA000000"
                        app:gradient_edge_color="#00000000"
                        android:padding="6dp">

                    <android.support.v7.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_navigation_edit_zazo_friends"
                            android:backgroundTint="@color/gray"
                            app:backgroundTint="@color/gray"
                            />
                </com.zazoapp.client.ui.view.ShadowedStatusLayout>
            </FrameLayout>

            <TextView
                    android:id="@+id/account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sani Elfishawy"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_large"
                    android:layout_marginBottom="2dp"
                    />

            <TextView
                    android:id="@+id/account_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_large"
                    android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
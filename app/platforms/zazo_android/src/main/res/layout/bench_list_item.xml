<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight">

    <include layout="@layout/contacts_heading"
            android:id="@+id/header"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/header"
            android:layout_toEndOf="@id/header">

        <View
                android:id="@+id/group_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/contacts_group_divider_color"
                android:layout_alignParentBottom="true"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/group_divider"
        >
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thumb"
                    android:layout_width="@dimen/thumb_icon_size"
                    android:layout_height="@dimen/thumb_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/bgn_thumb_2"
                    app:civ_fill_color="@color/accent_2"
                     />
            <TextView
                    android:id="@+id/thumb_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/thumb"
                    android:layout_alignStart="@id/thumb"
                    android:layout_alignRight="@id/thumb"
                    android:layout_alignEnd="@id/thumb"
                    android:layout_alignTop="@id/thumb"
                    android:layout_alignBottom="@id/thumb"
                    android:text="AB"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:gravity="center"
            />
            <com.zazoapp.client.ui.view.ShadowedStatusLayout
                    android:id="@+id/unread_count_layout"
                    android:layout_width="@dimen/grid_item_status_icon_size"
                    android:layout_height="@dimen/grid_item_status_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:visibility="gone"
                    app:solid_background_color="@color/bg_unread_msg_count">

                <com.zazoapp.client.ui.view.AutoResizeTextView
                        android:id="@+id/tw_unread_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/grid_item_status_icon_text_padding"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_very_small"
                        android:singleLine="true"/>
            </com.zazoapp.client.ui.view.ShadowedStatusLayout>
            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/thumb"
                    android:layout_toEndOf="@id/thumb"
                    android:layout_toLeftOf="@id/unread_count_layout"
                    android:layout_toStartOf="@id/unread_count_layout"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center_vertical"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                    android:paddingRight="?android:attr/listPreferredItemPaddingRight"
                    android:text="fdsdfs"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/contacts_name_text" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
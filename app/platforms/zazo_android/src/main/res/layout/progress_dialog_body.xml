<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/abc_popup_background_mtrl_mult"
              android:padding="@dimen/abc_dialog_padding_material">

    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"
        android:visibility="gone"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true"
                app:cpv_color="@color/primary"
                app:cpv_thickness="4dp"/>

        <TextView android:id="@+id/message"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="@dimen/abc_select_dialog_padding_start_material"
                  android:layout_marginRight="@dimen/abc_select_dialog_padding_start_material"
                  android:textColor="@color/dialog_text_content"/>
    </LinearLayout>
</LinearLayout>

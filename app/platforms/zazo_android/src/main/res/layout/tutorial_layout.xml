<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <TextView
            android:id="@+id/tutorial_hint"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_name"
            android:textSize="@dimen/tutorial_text_size"
            android:padding="20dp"
            android:text="hint"
            android:textStyle="bold"
            />

    <Button
            android:id="@+id/tutorial_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_tutorial_btn"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/color_name"
            android:textSize="@dimen/tutorial_text_size"
            android:text="@string/tutorial_got_it"
            android:textAllCaps="false"
            android:minWidth="140dp"
            android:minHeight="70dp"
            android:clickable="false"
            android:layout_marginBottom="60dp"/>

    <ImageView
            android:id="@+id/tutorial_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:minWidth="140dp"
            android:minHeight="70dp"
            android:clickable="false"
            android:layout_marginBottom="60dp"/>

    <ImageView
            android:id="@+id/tutorial_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</FrameLayout>
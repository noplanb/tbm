<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="8dp"
              android:paddingRight="8dp">
    <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/context_menu_view"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
    <com.zazoapp.client.ui.view.VideoProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/actionbar_item_padding"
            android:paddingRight="@dimen/actionbar_item_padding"
            android:gravity="center_vertical"
            android:text="@string/dialog_register_first_name_title"
            android:textSize="@dimen/text_very_large"
            android:textColor="@color/actionbar_textcolor"
            android:visibility="gone"
            />
    <ImageView
            android:id="@+id/mute"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/mute_btn_selector"
            />
</LinearLayout>
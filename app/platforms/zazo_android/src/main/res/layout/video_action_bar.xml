<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical">
    <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/menu_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="@dimen/actionbar_item_padding"
            android:paddingRight="@dimen/actionbar_item_padding"
            />
    <com.zazoapp.client.ui.view.VideoProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <ImageView
            android:id="@+id/mute"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:src="@drawable/mute_btn_selector"
            android:adjustViewBounds="true"
            />
</LinearLayout>
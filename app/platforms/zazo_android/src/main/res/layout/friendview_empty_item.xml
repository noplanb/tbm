<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:background="@drawable/bg_empty">

    <TextView
            android:id="@+id/card_empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_item_empty_text_bottom_padding"
            android:text="@string/add_contact"
            android:textColor="@color/add_contact_text"
            android:textSize="@dimen/text_small"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>

    <LinearLayout
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_above="@id/card_empty_text"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/card_empty_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:maxWidth="@dimen/large_icon_size"
                android:maxHeight="@dimen/large_icon_size"
                android:src="@drawable/card_empty_icon_selector"/>
    </LinearLayout>

</RelativeLayout>

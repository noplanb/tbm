<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="true">

        <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/actionbar_item_padding"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/navigation_settings"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
                    />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
            android:id="@+id/settings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/zazo_action_bar"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/toolbar_shadow"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="true">

        <RelativeLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/actionbar_item_padding"
                    android:paddingRight="@dimen/actionbar_item_padding"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/up"
                    android:layout_toEndOf="@id/up"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true">
                <TextView
                        android:id="@+id/action_bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/actionbar_item_icon_padding"
                        android:paddingEnd="@dimen/actionbar_item_icon_padding"
                        android:layout_centerVertical="true"
                        android:text="@string/navigation_settings"
                        android:textSize="@dimen/text_very_large"
                        android:textColor="@color/actionbar_textcolor"
                        />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
            android:id="@+id/settings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/zazo_action_bar"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/toolbar_shadow"/>
    <FrameLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
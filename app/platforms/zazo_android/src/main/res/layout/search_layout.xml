<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main"
                android:alpha="0"
                android:visibility="invisible"
>
    <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/search_back"
            style="@style/SearchPanelIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_search_back"
    />
    <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/search_clear"
            style="@style/SearchPanelIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search_clear"
    />
    <android.support.v7.widget.AppCompatEditText
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/search_clear"
            android:layout_toStartOf="@id/search_clear"
            android:layout_toRightOf="@id/search_back"
            android:layout_toEndOf="@id/search_back"
            android:layout_centerVertical="true"
            android:paddingTop="2dp"
            android:hint="@string/search_all_contacts_hint"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone"
            style="@style/EditTextStyle"
    />
</RelativeLayout>
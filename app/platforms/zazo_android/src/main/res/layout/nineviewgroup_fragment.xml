<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <include layout="@layout/splash_screen"/>

    <com.zazoapp.client.ui.view.NineViewGroup
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="visible"/>

    <com.zazoapp.client.ui.view.GestureControlledLayout
            android:id="@+id/video_root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/video_background">
        <TextView
                android:id="@+id/tw_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_name"
                android:textSize="@dimen/text_normal"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
        <FrameLayout
                android:id="@+id/video_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card">

            <com.zazoapp.client.ui.view.VideoView
                    android:id="@+id/video_view"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </FrameLayout>
    </com.zazoapp.client.ui.view.GestureControlledLayout>

</FrameLayout>
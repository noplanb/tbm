<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/primary">

    <ViewSwitcher
            android:id="@+id/video_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:layout_marginTop="@dimen/abc_dialog_list_padding_vertical_material"
            >

        <com.zazoapp.client.ui.view.VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"/>

        <com.zazoapp.client.ui.view.ThumbView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"/>
    </ViewSwitcher>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Space
                android:id="@+id/video_body_stub"
                android:layout_width="@dimen/transcription_video_width"
                android:layout_height="@dimen/transcription_video_height"/>
        <include
                android:id="@+id/transcription"
                layout="@layout/transcription_list"
                android:layout_toRightOf="@id/video_body_stub"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            app:useCompatPadding="true"
            android:src="@drawable/ic_reply_blue_48dp"
            app:backgroundTint="@color/white"
            app:borderWidth="2dp"
            app:elevation="@dimen/design_fab_elevation"
            android:layout_margin="@dimen/abc_control_inset_material"
            android:layout_gravity="bottom|end"
            app:rippleColor="@color/ripple_material_dark"
            android:visibility="visible"/>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main">
    <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/contacts_group_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/Widget.AppCompat.PopupMenu"
        />

        <com.zazoapp.client.ui.view.ClearableAutoCompleteTextView
                android:id="@+id/contacts_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:completionThreshold="1"
                android:ems="10"
                android:padding="10dp"
                android:hint="@string/search_all_contacts_hint"
                android:textColorHint="@color/dark_grey"
                android:background="@drawable/search_border"
                android:textColor="@android:color/white"
                android:inputType="textNoSuggestions"
                android:textCursorDrawable="@null"
                android:visibility="invisible"
        />
    </RelativeLayout>


    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="10000"
            android:indeterminateDrawable="@drawable/progress_spinner"
            android:indeterminateOnly="true"/>

    <ListView
            android:id="@+id/bench_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:dividerHeight="0px"
            android:visibility="invisible"
            android:layout_below="@id/search_layout"
            android:background="@color/bgn_main">

        <requestFocus/>
    </ListView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/search_layout">

        <include
                layout="@layout/contacts_heading"
                android:id="@+id/contacts_heading"/>

    </FrameLayout>
</RelativeLayout>
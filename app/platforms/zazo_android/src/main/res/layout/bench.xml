<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/contacts_group_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/Widget.AppCompat.PopupMenu"
        />

        <com.zazoapp.client.ui.view.ClearableAutoCompleteTextView
                android:id="@+id/contacts_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/contacts_group_selector"
                android:layout_toEndOf="@id/contacts_group_selector"
                android:completionThreshold="1"
                android:ems="10"
                android:padding="10dp"
                android:hint="@string/search_all_contacts_hint"
                android:inputType="textNoSuggestions"
                style="@style/EditTextStyle"
        />
    </RelativeLayout>


    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="10000"
            android:indeterminateDrawable="@drawable/progress_spinner"
            android:indeterminateOnly="true"/>

    <ListView
            android:id="@+id/bench_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:dividerHeight="0px"
            android:visibility="invisible"
            android:layout_below="@id/search_layout"
            android:background="@color/bgn_main">

        <requestFocus/>
    </ListView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/search_layout">

        <include
                layout="@layout/contacts_heading"
                android:id="@+id/contacts_heading"/>

    </FrameLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_layout"
            android:background="@drawable/toolbar_shadow"/>
</RelativeLayout>
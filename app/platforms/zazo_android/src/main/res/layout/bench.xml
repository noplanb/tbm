<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_bench"
                android:padding="5dp">
    <com.zazoapp.client.ui.view.ClearableAutoCompleteTextView
            android:id="@+id/contacts_auto_complete_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:completionThreshold="1"
            android:ems="10"
            android:padding="10dp"
            android:hint="@string/search_all_contacts_hint"
            android:textColorHint="@color/dark_grey"
            android:background="@drawable/search_border"
            android:textColor="@android:color/white"
            android:inputType="textNoSuggestions"
            android:textCursorDrawable="@null"/>

    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="10000"
            android:indeterminateDrawable="@drawable/progress_spinner"
            android:indeterminateOnly="true"/>

    <ListView
            android:id="@+id/bench_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:divider="@android:color/black"
            android:dividerHeight="1dp"
            android:visibility="invisible"
            android:layout_below="@id/contacts_auto_complete_text_view"
            android:background="@color/bg_bench">

        <requestFocus/>
    </ListView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/contacts_auto_complete_text_view">

        <include
                layout="@layout/contacts_heading"
                android:id="@+id/contacts_heading"/>

    </FrameLayout>
</RelativeLayout>
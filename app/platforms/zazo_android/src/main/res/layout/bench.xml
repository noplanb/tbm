<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/filter_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_panel_height">
        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/contacts_group_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/search_panel_margin"
                android:layout_marginStart="@dimen/search_panel_margin"
                android:layout_centerVertical="true"
                style="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/Widget.AppCompat.PopupMenu"
        />

        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/search_button"
                style="@style/SearchPanelIcon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_search"
        />

        <include layout="@layout/search_layout"
                 android:id="@+id/search_layout"/>
    </RelativeLayout>


    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="10000"
            android:indeterminateOnly="true"/>
    <ListView
            android:id="@+id/bench_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:dividerHeight="0px"
            android:visibility="invisible"
            android:layout_below="@id/filter_panel"
            android:background="@color/bgn_main">

        <requestFocus/>
    </ListView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/filter_panel">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight">
            <include
                    layout="@layout/contacts_heading"
                    android:id="@+id/contacts_heading"
            />
        </RelativeLayout>


    </FrameLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_panel"
            android:background="@drawable/toolbar_shadow"/>
</RelativeLayout>
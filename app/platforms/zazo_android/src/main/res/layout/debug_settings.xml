<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            <TableRow>
                <TextView
                        android:id="@+id/version_label"
                        style="@style/DevText"
                        android:text="Version: "
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/version_name"
                            style="@style/DevText"
                            android:layout_marginLeft="5dp"
                            android:text="0.1"/>

                    <TextView
                            android:id="@+id/version_code"
                            style="@style/DevText"
                            android:layout_marginLeft="5dp"
                            android:text="10"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                        android:id="@+id/db_version_label"
                        style="@style/DevText"
                        android:text="DB: "
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/db_version_number"
                            style="@style/DevText"
                            android:layout_marginLeft="5dp"
                            android:text="1"/>

                    <TextView
                            android:id="@+id/db_version_real"
                            style="@style/DevText"
                            android:layout_marginLeft="5dp"
                            android:text="1"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                        android:id="@+id/user_info_label"
                        style="@style/DevText"
                        android:text="User:"/>
                <TextView
                        android:id="@+id/user_info"
                        style="@style/DevText"
                        android:layout_marginLeft="5dp"
                        android:text="User info\n"/>
                <Button
                        android:id="@+id/user_info_dispatch"
                        style="@style/DevButton"
                        android:text="Dispatch"/>
            </TableRow>
            <TableRow>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:weightSum="4"
                        android:gravity="center">

                    <android.support.v7.widget.AppCompatEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:ems="10"
                            android:id="@+id/dispatch_logs_date_start"
                            android:focusable="false"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="12/21/2015"
                            android:textSize="@dimen/text_small"
                            style="@style/DevEditText"/>
                    <android.support.v7.widget.AppCompatEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:ems="10"
                            android:id="@+id/dispatch_logs_date_end"
                            android:focusable="false"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="12/21/2015"
                            android:textSize="@dimen/text_small"
                            style="@style/DevEditText"/>

                    <Button
                            android:id="@+id/dispatch_extended_logs"
                            style="@style/DevButton"
                            android:layout_width="match_parent"
                            android:text="Dispatch Extended Logs"
                            android:layout_weight="2"
                            />
                </LinearLayout>
            </TableRow>
            <TableRow>
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"/>
                <Button
                        android:id="@+id/user_info_backup"
                        style="@style/DevButton"
                        android:text="Backup"/>
            </TableRow>
            <TableRow>
                <TextView
                        style="@style/DevText"
                        android:layout_gravity="center_vertical"
                        android:text="Clear user data (friends, videos)"
                        android:layout_span="2"/>
                <Button
                        android:id="@+id/clear_user_data"
                        style="@style/DevButton"
                        android:text="Clear"/>
            </TableRow>
        </TableLayout>

        <LinearLayout style="@style/DevDivider.Layout">
            <View style="@style/DevDivider.Line"/><TextView style="@style/DevDivider.View" android:text="Registration options"/><View style="@style/DevDivider.Line"/>
        </LinearLayout>
        <Switch
                android:id="@+id/custom_server"
                style="@style/DevSwitch"
                android:text="Use custom server"
                android:enabled="false"/>

        <Switch
                android:id="@+id/server_force_sms"
                style="@style/DevSwitch"
                android:text="Force SMS during registration"
                android:enabled="false"/>
        <Switch
                android:id="@+id/server_force_call"
                style="@style/DevSwitch"
                android:text="Force Call during registration"
                android:enabled="false"/>
        <LinearLayout
                android:id="@+id/server_host_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/server_host_label"
                    style="@style/DevText"
                    android:text="Server host: "/>

            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/server_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="textUri"
                    style="@style/DevEditText"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/server_uri_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/server_uri_label"
                    style="@style/DevText"
                    android:text="Server uri: "/>

            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/server_uri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="textUri"
                    style="@style/DevEditText"/>
        </LinearLayout>

        <LinearLayout style="@style/DevDivider.Layout">
            <View style="@style/DevDivider.Line"/><TextView style="@style/DevDivider.View" android:text="Debug options"/><View style="@style/DevDivider.Line"/>
        </LinearLayout>

        <Switch
                android:id="@+id/debug_mode"
                style="@style/DevSwitch"
                android:text="Debug mode"/>
        <LinearLayout
                android:id="@+id/crash_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        style="@style/DevText"
                        android:text="Crash in main thread"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                <Button
                        android:id="@+id/crash_main_button"
                        style="@style/DevButton"
                        android:text="Throw"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        style="@style/DevText"
                        android:text="Crash in background thread"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                <Button
                        android:id="@+id/crash_thread_button"
                        style="@style/DevButton"
                        android:text="Throw"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/DevDivider.Layout">
            <View style="@style/DevDivider.Line"/><TextView style="@style/DevDivider.View" android:text="Customization"/><View style="@style/DevDivider.Line"/>
        </LinearLayout>

        <Switch
                android:id="@+id/send_sms"
                style="@style/DevSwitch"
                android:text="Send real sms"/>

        <Switch
                android:id="@+id/use_rear_camera"
                style="@style/DevSwitch"
                android:text="Use rear camera"
                />

        <Switch
                android:id="@+id/send_broken_video"
                style="@style/DevSwitch"
                android:text="Send broken video"/>

        <Switch
                android:id="@+id/disable_gcm_notifications"
                style="@style/DevSwitch"
                android:text="Disable GCM notifications"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/DevText"
                    android:id="@+id/min_room_space_label"
                    android:text="Min room space restriction, MB"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/min_room_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="3"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:digits="0123456789"
                    style="@style/DevEditText"/>
        </LinearLayout>

        <Switch
                android:id="@+id/send_incorrect_file_size"
                style="@style/DevSwitch"
                android:text="Send incorrect file size"/>
        <Switch
                android:id="@+id/allow_resend"
                style="@style/DevSwitch"
                android:text="Allow resend"/>

        <Switch
                android:id="@+id/allow_send_contacts"
                style="@style/DevSwitch"
                android:text="Allow send contacts (each week)"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/DevText"
                    android:text="Send contacts now"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            <Button
                    android:id="@+id/send_contacts_button"
                    style="@style/DevButton"
                    android:text="Send"/>
        </LinearLayout>

        <Switch
                android:id="@+id/imitate_requests"
                style="@style/DevSwitch"
                android:text="Imitate requests (FF)"/>

        <LinearLayout style="@style/DevDivider.Layout">
            <View style="@style/DevDivider.Line"/><TextView style="@style/DevDivider.View" android:text="Tutorial"/><View style="@style/DevDivider.Line"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/DevText"
                    android:text="Reset tutorial hints"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            <Button
                    android:id="@+id/reset_tutorial"
                    style="@style/DevButton"
                    android:text="Reset"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    style="@style/DevText"
                    android:text="Feature options"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            <Button
                    android:id="@+id/feature_options_open_btn"
                    style="@style/DevButton"
                    android:text="Open"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/feature_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Switch
                    android:id="@+id/enable_all_features"
                    style="@style/DevSwitch"
                    android:text="Enable all features (test)"/>
            <Button
                    android:id="@+id/manage_features"
                    style="@style/DevButton"
                    android:layout_width="match_parent"
                    android:text="Manage features"
                    android:layout_marginTop="@dimen/debug_options_margin"/>
            <Button
                    android:id="@+id/delete_user_settings"
                    style="@style/DevButton"
                    android:layout_width="match_parent"
                    android:text="Delete user settings"
                    android:layout_marginTop="@dimen/debug_options_margin"/>
            <Button
                    android:id="@+id/delete_welcomed_friends"
                    style="@style/DevButton"
                    android:layout_width="match_parent"
                    android:text="Delete welcomed friends"
                    android:layout_marginTop="@dimen/debug_options_margin"/>
            <Button
                    android:id="@+id/lock_all_features"
                    style="@style/DevButton"
                    android:layout_width="match_parent"
                    android:text="Lock all features"
                    android:layout_marginTop="@dimen/debug_options_margin"/>

            <include layout="@layout/lollipop_specific_features"
                    android:id="@+id/lollipop_specific_features"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
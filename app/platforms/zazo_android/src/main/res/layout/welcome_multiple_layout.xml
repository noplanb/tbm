<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/thumb_color_teal">

    <TextureView
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:background="@drawable/top_scrim"
            android:clickable="true">

        <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/actionbar_item_padding"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/welcome_friends"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
                    />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/recording_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
        <TextView
                android:id="@+id/recording_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/recording_time_label_bgn"
                android:drawableLeft="@drawable/ic_flag_ua"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"/>
        <ImageView
                android:id="@+id/stop_recording_btn"
                android:layout_width="@dimen/thumb_icon_size"
                android:layout_height="@dimen/thumb_icon_size"
                android:src="@drawable/ic_card_empty"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
                android:layout_centerHorizontal="true"
                />
    </RelativeLayout>
    <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="false"
            app:behavior_peekHeight="200dp"
            android:background="@drawable/bottom_sheet_bgn"
            app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/number_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/suggestion_notice"
                    android:padding="@dimen/abc_action_bar_content_inset_material"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_btn_bgn"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/abc_action_bar_content_inset_material">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/suggestion_notice"
                        android:text="@string/to_label"/>
                <LinearLayout
                        android:id="@+id/recipients_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_record_white"
            app:backgroundTint="@color/accent_2"
            app:useCompatPadding="true"
            app:elevation="4dp"
            android:layout_marginRight="@dimen/abc_control_inset_material"
            android:layout_marginEnd="@dimen/abc_control_inset_material"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|end"
            app:rippleColor="@color/ripple_material_dark"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|center_horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ImageView
                android:id="@+id/switch_camera_icon"
                android:layout_width="@dimen/thumb_icon_size"
                android:layout_height="@dimen/thumb_icon_size"
                android:src="@drawable/ic_camera_switch"
                android:padding="3dp"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:clipChildren="false"
                android:clipToPadding="false">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:clipChildren="true">
        <com.zazoapp.client.ui.view.ThumbView
                android:id="@+id/img_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_scrim">
        <TextView
                android:id="@+id/tw_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="10dp"
                android:text="Firstnameisverylongandshouldbetruncated Firstnameisverylongandshouldbetruncated  "
                android:textColor="@color/color_name"
                android:textSize="@dimen/text_normal"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/name_layout"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="5"
                android:layout_weight="3"
                android:gravity="center">
            <com.zazoapp.client.ui.view.rotationcircleview.view.RotationCircleView
                    android:id="@+id/hold_to_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:maxWidth="@dimen/large_icon_size"
                    android:maxHeight="@dimen/large_icon_size"
                    android:visibility="invisible"
                    />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

    
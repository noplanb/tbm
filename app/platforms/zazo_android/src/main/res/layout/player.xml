<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/tw_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_name"
            android:textSize="@dimen/text_normal"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"/>
    <ViewSwitcher
            android:id="@+id/video_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            >

        <com.zazoapp.client.ui.view.VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"/>

        <com.zazoapp.client.ui.view.ThumbView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"/>
    </ViewSwitcher>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                android:id="@+id/messages"
                layout="@layout/transcription_list"
                android:layout_marginLeft="@dimen/messages_list_horizontal_padding"
                android:layout_marginRight="@dimen/messages_list_horizontal_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                app:useCompatPadding="true"
                android:src="@drawable/ic_arrow_forward_blue_48dp"
                app:backgroundTint="@color/white"
                app:borderWidth="2dp"
                app:elevation="@dimen/design_fab_elevation"
                android:layout_margin="@dimen/abc_control_inset_material"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleX="0"
                android:scaleY="0"
                app:rippleColor="@color/ripple_material_dark"
                android:visibility="invisible"/>
    </RelativeLayout>
</FrameLayout>
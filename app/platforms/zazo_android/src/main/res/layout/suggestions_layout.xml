<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/bgn_main"
                android:clickable="true">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="false">

        <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/actionbar_item_padding"
                    android:visibility="gone"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/suggestions"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
            />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/last_suggestion_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/suggestion_card_background"
            android:clipChildren="false"
            android:clipToPadding="false">
        <FrameLayout
                android:id="@+id/suggestion_card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">
            <LinearLayout
                    android:id="@+id/unsubscribed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/abc_dialog_padding_material"
                    android:paddingRight="@dimen/abc_dialog_padding_material"
                    android:layout_marginTop="16dp">
                <ImageView
                        android:layout_width="@dimen/thumb_icon_size"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:src="@android:drawable/ic_dialog_alert"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/suggestions_unsubscribed_notice"
                        android:textColor="@color/suggestion_notice"
                        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
                        android:layout_marginStart="@dimen/abc_action_bar_content_inset_material"
                        android:textSize="@dimen/text_small"
                        />
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/added_ignored_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/abc_dialog_padding_material"
                    android:paddingRight="@dimen/abc_dialog_padding_material"
                    android:layout_marginTop="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/last_suggestion_thumb"
                        android:layout_width="@dimen/thumb_icon_size"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/bgn_thumb_2"
                        app:civ_fill_color="@color/accent_2"
                        />
                <TextView
                        android:id="@+id/thumb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/last_suggestion_thumb"
                        android:layout_alignStart="@id/last_suggestion_thumb"
                        android:layout_alignRight="@id/last_suggestion_thumb"
                        android:layout_alignEnd="@id/last_suggestion_thumb"
                        android:layout_alignTop="@id/last_suggestion_thumb"
                        android:layout_alignBottom="@id/last_suggestion_thumb"
                        android:text="AB"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_xlarge"
                        android:gravity="center"
                        />
                <ImageView
                        android:id="@+id/add_ignore_mark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_card_empty_next"
                        android:layout_alignBottom="@id/last_suggestion_thumb"
                        android:layout_alignRight="@id/last_suggestion_thumb"
                        android:translationX="5dp"
                        android:translationY="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/last_suggestion_thumb"
                        android:layout_toEndOf="@id/last_suggestion_thumb"
                        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
                        android:layout_marginStart="@dimen/abc_action_bar_content_inset_material">
                    <TextView
                            android:id="@+id/suggestion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center_vertical"
                            android:text="J.J. Philips Abramson"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/contacts_name_text" />
                    <TextView
                            android:id="@+id/suggestion_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="+1 000 0000000"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/contacts_phone_text" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
        <Button
                android:id="@+id/suggestion_action_btn"
                style="@style/BorderlessFlatActionButton"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="@dimen/abc_dialog_padding_material"
                android:layout_marginEnd="@dimen/abc_dialog_padding_material"
                android:layout_below="@id/suggestion_card_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/dialog_action_ok"/>
    </RelativeLayout>
    <ListView
            android:id="@+id/friends_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/last_suggestion_card"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:dividerHeight="0px"
            android:background="@color/bgn_main"
            tools:listitem="@layout/manage_friends_list_item"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/toolbar_shadow"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main"
                android:clickable="true">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="false">

        <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/actionbar_item_padding"
                    android:visibility="visible"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/suggestions"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
            />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/done_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="@dimen/text_very_large"
                android:textColor="@color/actionbar_textcolor"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:drawableLeft="@drawable/ic_action_accept_white"
                android:drawableStart="@drawable/ic_action_accept_white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/last_suggestion_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/suggestion_card_background"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/abc_dialog_padding_material"
            android:paddingRight="@dimen/abc_dialog_padding_material"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
        <FrameLayout
                android:id="@+id/suggestion_card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">
            <LinearLayout
                    android:id="@+id/unsubscribed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="@dimen/thumb_icon_size"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:src="@drawable/ic_suggestions_unsubscribed_mark"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/ff_unsubscribed_message"
                        android:textColor="@color/suggestion_notice"
                        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
                        android:layout_marginStart="@dimen/abc_action_bar_content_inset_material"
                        android:textSize="@dimen/text_small"
                        />
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/added_ignored_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/last_suggestion_thumb"
                        android:layout_width="@dimen/thumb_icon_size"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/bgn_thumb_2"
                        app:civ_fill_color="@color/accent_2"
                        />
                <TextView
                        android:id="@+id/last_suggestion_thumb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/last_suggestion_thumb"
                        android:layout_alignStart="@id/last_suggestion_thumb"
                        android:layout_alignRight="@id/last_suggestion_thumb"
                        android:layout_alignEnd="@id/last_suggestion_thumb"
                        android:layout_alignTop="@id/last_suggestion_thumb"
                        android:layout_alignBottom="@id/last_suggestion_thumb"
                        android:text="AB"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_xlarge"
                        android:gravity="center"
                        />
                <ImageView
                        android:id="@+id/add_ignore_mark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_suggestions_add_ignore_mark"
                        android:layout_alignBottom="@id/last_suggestion_thumb"
                        android:layout_alignRight="@id/last_suggestion_thumb"
                        android:translationX="5dp"
                        android:translationY="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/last_suggestion_thumb"
                        android:layout_toEndOf="@id/last_suggestion_thumb"
                        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
                        android:layout_marginStart="@dimen/abc_action_bar_content_inset_material">
                    <TextView
                            android:id="@+id/suggestion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="J.J. Philips Abramson"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/contacts_name_text" />
                    <TextView
                            android:id="@+id/suggestion_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+1 000 0000000"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/contacts_phone_text" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
        <Button
                android:id="@+id/suggestion_action_btn"
                style="@style/BorderlessFlatActionButton"
                android:layout_marginTop="16dp"
                android:layout_below="@id/suggestion_card_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/dialog_action_ok"/>
        <LinearLayout
                android:id="@+id/multiple_action_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_below="@id/suggestion_card_content"
                android:layout_marginTop="16dp">

            <Button
                    android:id="@+id/suggestion_action_third_btn"
                    style="@style/BorderlessFlatActionButton"
                    android:textColor="@color/suggestions_secondary_action_btn"/>
            <Button
                    android:id="@+id/suggestion_action_second_btn"
                    style="@style/BorderlessFlatActionButton"
                    android:textColor="@color/suggestions_secondary_action_btn"/>
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/suggestion_action_main_btn"
                    style="@style/Widget.AppCompat.Button"
                    app:backgroundTint="@color/suggestions_btn_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:minWidth="64dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/last_suggestion_card"
            android:layout_alignParentBottom="true"
            >
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <fr.castorflex.android.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/suggestions_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0px"
                    android:background="@color/bgn_main"
                    tools:listitem="@layout/suggestions_list_item"/>
            <RelativeLayout
                    android:id="@+id/empty_suggestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:layout_centerHorizontal="true"
                        android:text="@string/suggestions_empty"
                        android:gravity="center"
                        android:padding="@dimen/abc_dialog_padding_material"/>
            </RelativeLayout>
        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/card_request_progress"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:indeterminate="true"
            android:layout_below="@id/last_suggestion_card"
            android:translationY="-1dp"
            android:visibility="invisible"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingRight="?android:attr/listPreferredItemPaddingRight"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_above="@id/swipe_container"
            android:visibility="gone">
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/test_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button"
                app:backgroundTint="@color/suggestions_btn_tint"
                android:textColor="@color/white"
                android:text="Add"
                />
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/test_remove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button"
                app:backgroundTint="@color/suggestions_btn_tint"
                android:textColor="@color/white"
                android:text="Remove"
                />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/toolbar_shadow"/>
    <FrameLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>
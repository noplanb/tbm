<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="false">

        <RelativeLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/actionbar_item_padding"
                    android:paddingRight="@dimen/actionbar_item_padding"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:visibility="visible"/>
            <com.zazoapp.client.ui.view.CircleThumbView
                    android:id="@+id/action_bar_icon"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_toRightOf="@id/up"
                    android:layout_toEndOf="@id/up"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bgn_thumb_2"
                    app:civ_border_width="1dp"
                    app:civ_border_overlay="true"
                    app:civ_border_color="@color/black_overlay"
                    android:layout_marginRight="@dimen/actionbar_item_padding"
                    android:layout_marginEnd="@dimen/actionbar_item_padding"/>
            <TextView
                    android:id="@+id/action_bar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/action_bar_icon"
                    android:layout_toEndOf="@id/action_bar_icon"
                    android:paddingRight="@dimen/actionbar_item_icon_padding"
                    android:paddingEnd="@dimen/actionbar_item_icon_padding"
                    android:layout_centerVertical="true"
                    android:text="@string/dialog_register_first_name_title"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
            />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/texter_layout"
             android:layout_below="@id/zazo_action_bar"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>

</RelativeLayout>
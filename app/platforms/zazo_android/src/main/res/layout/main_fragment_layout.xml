<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >

        <!-- The main content view -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.design.widget.AppBarLayout
                        android:id="@+id/zazo_action_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            style="@style/ZazoActionBar">

                        <com.balysv.materialmenu.MaterialMenuView
                                android:id="@+id/menu_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingLeft="@dimen/actionbar_item_padding"
                                android:paddingRight="@dimen/actionbar_item_padding"
                        />

                        <ImageView
                                android:id="@+id/action_bar_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/menu_view"
                                android:layout_toEndOf="@id/menu_view"
                                android:paddingTop="@dimen/actionbar_item_icon_padding"
                                android:paddingBottom="@dimen/actionbar_item_icon_padding"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:src="@drawable/zazo_type_white"/>

                        <ImageButton
                                android:id="@+id/overflow_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="@dimen/actionbar_item_padding"
                                android:src="@drawable/ic_menu_dots"
                                android:background="?android:selectableItemBackground"/>

                        <android.support.design.widget.TabLayout
                                android:id="@+id/tabs"
                                android:layout_toRightOf="@id/action_bar_icon"
                                android:layout_toEndOf="@id/action_bar_icon"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                    </RelativeLayout>
                </android.support.design.widget.AppBarLayout>

                <android.support.v4.view.ViewPager

                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/zazo_action_bar">

                    <!--        <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                />-->

                </android.support.v4.view.ViewPager>

            </RelativeLayout>
            <FrameLayout
                    android:id="@+id/top_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </FrameLayout>


        <!-- The navigation drawer -->

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:menu="@menu/drawer"/>
    </android.support.v4.widget.DrawerLayout>

    <com.zazoapp.client.tutorial.TutorialLayout
            android:id="@+id/tutorial_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

        <TextView
                android:id="@+id/tutorial_hint"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_name"
                android:textSize="@dimen/tutorial_text_size"
                android:padding="20dp"
                android:text="hint"
                android:textStyle="bold"
        />

        <Button
                android:id="@+id/tutorial_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_tutorial_btn"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="@color/color_name"
                android:textSize="@dimen/tutorial_text_size"
                android:text="@string/tutorial_got_it"
                android:textAllCaps="false"
                android:minWidth="140dp"
                android:minHeight="70dp"
                android:clickable="false"
                android:layout_marginBottom="60dp"/>

        <ImageView
                android:id="@+id/tutorial_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:minWidth="140dp"
                android:minHeight="70dp"
                android:clickable="false"
                android:layout_marginBottom="60dp"/>

        <ImageView
                android:id="@+id/tutorial_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.zazoapp.client.tutorial.TutorialLayout>

</RelativeLayout>
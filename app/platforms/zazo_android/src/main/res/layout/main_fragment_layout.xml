<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >

        <!-- The main content view -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:id="@+id/zazo_action_bar"
                        style="@style/ZazoActionBar">

                    <com.balysv.materialmenu.MaterialMenuView
                            android:id="@+id/menu_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:paddingLeft="@dimen/actionbar_item_padding"
                            android:paddingRight="@dimen/actionbar_item_padding"
                    />

                    <ImageView
                            android:id="@+id/action_bar_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/menu_view"
                            android:layout_toEndOf="@id/menu_view"
                            android:paddingTop="@dimen/actionbar_item_icon_padding"
                            android:paddingBottom="@dimen/actionbar_item_icon_padding"
                            android:paddingRight="@dimen/actionbar_item_icon_padding"
                            android:paddingEnd="@dimen/actionbar_item_icon_padding"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/zazo_type_white"/>

                    <android.support.design.widget.TabLayout
                            android:id="@+id/tabs"
                            android:layout_toRightOf="@id/action_bar_icon"
                            android:layout_toEndOf="@id/action_bar_icon"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                </RelativeLayout>
                <com.zazoapp.client.ui.view.ZazoViewPager

                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/zazo_action_bar">

                    <!--        <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 android:layout_gravity="center"
                                />-->

                </com.zazoapp.client.ui.view.ZazoViewPager>
                <View
                        android:id="@+id/zazo_action_bar_divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zazo_action_bar"
                        android:background="@drawable/toolbar_shadow"/>
                <LinearLayout
                        android:id="@+id/zazo_action_context_bar"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_alignLeft="@id/zazo_action_bar"
                        android:layout_alignRight="@id/zazo_action_bar"
                        android:layout_alignTop="@id/zazo_action_bar"
                        android:layout_alignBottom="@id/zazo_action_bar"
                        android:background="@color/primary"
                        android:alpha="0"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        />
            </RelativeLayout>
            <FrameLayout
                    android:id="@+id/top_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </FrameLayout>


        <!-- The navigation drawer -->

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:menu="@menu/navigation_menu"
            app:elevation="4dp"
            app:itemTextColor="@color/drawer_item_text"
            app:itemIconTint="@color/drawer_icon"
            android:background="@android:color/white"
            />
    </android.support.v4.widget.DrawerLayout>

    <FrameLayout
            android:id="@+id/tutorial_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.zazoapp.client.tutorial.TutorialLayout
                android:id="@+id/tutorial_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
    </FrameLayout>

</RelativeLayout>
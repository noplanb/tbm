<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="@dimen/abc_select_dialog_padding_start_material">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/dlg_edit_code_floating_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/dialog_text_content"
            android:hint="@string/enter_code_dlg_hint"
            app:hintTextAppearance="@style/DialogTextInput"
            >

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/input_field_bgn"
                app:backgroundTint="@color/primary"
                android:inputType="number"
                android:digits="0123456789"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:textCursorDrawable="@null"
                android:textColor="@color/dialog_textcolor"
                >

            <requestFocus/>
        </android.support.v7.widget.AppCompatEditText>
    </android.support.design.widget.TextInputLayout>

    <TextView
            android:id="@+id/call_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/enter_code_dlg_button_call"
            android:textColor="@color/dialog_link_color"
            android:textAllCaps="false"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:clickable="true"
            />

</LinearLayout>

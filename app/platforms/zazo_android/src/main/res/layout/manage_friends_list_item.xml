<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="?android:attr/listPreferredItemHeight"
             android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
                android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:showText="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            <RelativeLayout
                    android:id="@+id/left_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/delete_btn"
                    android:layout_toStartOf="@id/delete_btn">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/thumb"
                        android:layout_width="@dimen/thumb_icon_size"
                        android:layout_height="@dimen/thumb_icon_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/bgn_thumb_2"
                        app:civ_fill_color="@color/accent_2"
                />
                <TextView
                        android:id="@+id/thumb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/thumb"
                        android:layout_alignStart="@id/thumb"
                        android:layout_alignRight="@id/thumb"
                        android:layout_alignEnd="@id/thumb"
                        android:layout_alignTop="@id/thumb"
                        android:layout_alignBottom="@id/thumb"
                        android:text="AB"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_xlarge"
                        android:gravity="center"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/thumb"
                        android:layout_toEndOf="@id/thumb"
                        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                    <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center_vertical"
                            android:text="J.J. Philips Abramson"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/contacts_name_text" />
                    <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="+1 000 0000000"
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/contacts_phone_text" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="invisible">
            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/dialog_body_bg"
                    android:alpha="0.5"/>

        </RelativeLayout>

</FrameLayout>
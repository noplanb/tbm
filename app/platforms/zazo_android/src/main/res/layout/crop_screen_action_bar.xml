<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              xmlns:tools="http://schemas.android.com/tools"
              tools:background="@color/primary">
    <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/context_menu_view"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
    <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/actionbar_item_padding"
            android:paddingRight="@dimen/actionbar_item_padding"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="@string/account_setup_avatar"
            android:textSize="@dimen/text_very_large"
            android:textColor="@color/actionbar_textcolor"
            />
<!--    <ImageView
            android:id="@+id/rotate_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_very_large"
            android:textColor="@color/actionbar_textcolor"
            android:drawableLeft="@drawable/ic_action_accept_white"
            android:drawableStart="@drawable/ic_action_accept_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            />-->
    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_very_large"
            android:textColor="@color/actionbar_textcolor"
            android:drawableLeft="@drawable/ic_action_accept_white"
            android:drawableStart="@drawable/ic_action_accept_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            />
</LinearLayout>
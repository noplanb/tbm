<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
                android:paddingStart="@dimen/abc_button_padding_horizontal_material">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_icon_size"
            android:background="@drawable/chips_bgn">
        <RelativeLayout
                android:id="@+id/thumb_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="4dp">
            <com.zazoapp.client.ui.view.CircleThumbView
                    android:id="@+id/thumb"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:civ_fill_color="@color/accent_2"
                    android:src="@drawable/bgn_thumb_2"/>
            <TextView
                    android:id="@+id/thumb_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/thumb"
                    android:layout_alignStart="@id/thumb"
                    android:layout_alignRight="@id/thumb"
                    android:layout_alignEnd="@id/thumb"
                    android:layout_alignTop="@id/thumb"
                    android:layout_alignBottom="@id/thumb"
                    android:text="AB"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:gravity="center"
                    />
        </RelativeLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_icon_size"
                android:layout_toRightOf="@id/thumb_layout"
                android:layout_toEndOf="@id/thumb_layout"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp">
            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Alan Turing"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:alpha="0.87"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
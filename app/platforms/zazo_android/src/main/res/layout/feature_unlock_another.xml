<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feature_unlock_another_height"
            android:layout_alignParentBottom="true"
            android:background="@color/feature_unlock_popup_bg">
        <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_feature_gift"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        <Button
                android:id="@+id/action_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="true"
                android:background="@null"
                android:textSize="@dimen/text_small"
                android:text="@string/dialog_action_invite"
                android:paddingRight="24dp"
                android:paddingLeft="16dp"
                android:textColor="@color/yellow"/>
        <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/action_btn"
                android:layout_toRightOf="@id/icon"
                android:orientation="vertical"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/action_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:text="@string/just_zazo_someone_new"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

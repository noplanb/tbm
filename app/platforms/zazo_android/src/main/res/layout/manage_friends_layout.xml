<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgn_main">

    <RelativeLayout
            android:id="@+id/zazo_action_bar"
            style="@style/ZazoActionBar"
            android:clickable="true">

        <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true">

            <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/actionbar_item_padding"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/manage_friends"
                    android:textSize="@dimen/text_very_large"
                    android:textColor="@color/actionbar_textcolor"
            />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/filter_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_panel_height"
            android:layout_below="@id/zazo_action_bar">
        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/search_button"
                style="@style/SearchPanelIcon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_search"
        />

        <include layout="@layout/search_layout"
                 android:id="@+id/search_layout"/>
    </RelativeLayout>
    <ListView
            android:id="@+id/friends_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filter_panel"
            android:layout_alignParentBottom="true"
            android:divider="@null"
            android:dividerHeight="0px"
            android:background="@color/bgn_main"
            tools:listitem="@layout/manage_friends_list_item"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_panel"
            android:background="@drawable/toolbar_shadow"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zazo_action_bar"
            android:background="@drawable/toolbar_shadow"/>
</RelativeLayout>
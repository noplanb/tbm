<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_margin="0dp"
             android:background="@drawable/abc_popup_background_mtrl_mult"
             android:orientation="vertical"
             android:paddingBottom="10dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingTop="10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/thumbImage"
                android:layout_width="@dimen/thumb_icon_size"
                android:layout_height="@dimen/thumb_icon_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/bgn_thumb_2"
                app:civ_fill_color="@color/accent_2"
                />

        <TextView
                android:id="@+id/thumb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/thumbImage"
                android:layout_alignStart="@id/thumbImage"
                android:layout_alignRight="@id/thumbImage"
                android:layout_alignEnd="@id/thumbImage"
                android:layout_alignTop="@id/thumbImage"
                android:layout_alignBottom="@id/thumbImage"
                android:text="AB"
                android:textColor="@color/white"
                android:textSize="@dimen/text_xlarge"
                android:gravity="center"
                />

        <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/thumbImage">
            <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="From Konstantin"
                    android:textSize="@dimen/text_xlarge"
                    android:textColor="@color/contacts_name_text"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <ImageView
                        android:id="@+id/logoImage"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_zazo_blue"
                        android:visibility="visible"
                        />
                <TextView
                        android:id="@+id/subtitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_very_small"
                        android:textColor="@color/contacts_phone_text"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/multiple_action_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_below="@id/titleLayout"
                android:layout_marginTop="16dp"
                android:weightSum="4">

            <Button
                    android:id="@+id/action_third_btn"
                    style="@style/BorderlessFlatActionButton"
                    android:background="@drawable/dialog_action_btn_bg"
                    android:padding="@dimen/abc_control_inset_material"
                    android:layout_margin="@dimen/abc_control_inset_material"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:textColor="@color/suggestions_secondary_action_btn"/>
            <Button
                    android:id="@+id/action_second_btn"
                    style="@style/BorderlessFlatActionButton"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/abc_control_inset_material"
                    android:padding="@dimen/abc_control_inset_material"
                    android:background="@drawable/dialog_action_btn_bg"
                    android:text="@string/action_dismiss"
                    android:textColor="@color/suggestions_secondary_action_btn"/>

            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/action_main_btn"
                    style="@style/Widget.AppCompat.Button"
                    app:backgroundTint="@color/suggestions_btn_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="64dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="@string/action_view"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
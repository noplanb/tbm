<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/voice_recognition_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/selectors_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Spinner
                    android:id="@+id/friends_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    style="@android:style/Widget.Material.Spinner"
                    android:clickable="true"/>
            <Button
                    android:id="@+id/all_transcriptions"
                    style="@style/DevButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Show all"
                    />
        </LinearLayout>
        <FrameLayout
                android:id="@+id/video_view_layout"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_below="@id/selectors_layout"
                android:layout_alignParentLeft="true">
            <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </FrameLayout>
        <ImageView
                android:id="@+id/thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/video_view_layout"
                android:layout_alignRight="@id/video_view_layout"
                android:layout_alignTop="@id/video_view_layout"
                android:layout_alignBottom="@id/video_view_layout"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/video_view_layout"
                android:layout_alignRight="@id/video_view_layout"
                android:layout_below="@id/video_view_layout">
            <Button
                    android:id="@+id/previous"
                    style="@style/DevButton"
                    android:layout_weight="1"
                    android:text="@string/dev_previous"
                    android:textSize="@dimen/text_huge"/>
            <Button
                    android:id="@+id/next"
                    style="@style/DevButton"
                    android:layout_weight="1"
                    android:text="@string/dev_next"
                    android:textSize="@dimen/text_huge"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@id/selectors_layout"
                android:layout_toRightOf="@id/video_view_layout"
                android:padding="5dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@id/name"
                        style="@style/DevText"
                        android:text="Name"
                        />
                <TextView
                        android:id="@+id/duration"
                        style="@style/DevText"
                        android:text="Duration"
                        />
                <TextView
                        android:id="@+id/from"
                        style="@style/DevText"
                        android:text="From"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <Button
                                android:id="@+id/google"
                                style="@style/DevButton"
                                android:layout_gravity="center"
                                android:text="Google"/>
                        <ProgressBar
                                android:id="@+id/google_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />
                    </LinearLayout>
                    <TextView
                            android:id="@+id/google_transcription"
                            style="@style/DevText"
                            android:layout_width="match_parent"
                            android:text="g"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <Button
                                android:id="@+id/nuance"
                                style="@style/DevButton"
                                android:layout_gravity="center"
                                android:text="Nuance"/>
                        <ProgressBar
                                android:id="@+id/nuance_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />
                    </LinearLayout>
                    <TextView
                            android:id="@+id/nuance_transcription"
                            style="@style/DevText"
                            android:layout_width="match_parent"
                            android:text="n"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true"
          android:state_last="true">
        <ripple android:color="@color/black_overlay">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/popup_radius"/>
                    <solid android:color="@color/dialog_body_bg"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_first="true">
        <ripple android:color="@color/black_overlay">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="@dimen/popup_radius"
                            android:topRightRadius="@dimen/popup_radius"/>
                    <solid android:color="@color/dialog_body_bg"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_last="true">
        <ripple android:color="@color/black_overlay">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/popup_radius"
                             android:bottomRightRadius="@dimen/popup_radius"/>
                    <solid android:color="@color/dialog_body_bg"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/black_overlay">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_body_bg"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ANIMATION  -->
    <integer name="rcv_default_anim_duration">1000</integer>
    <integer name="rcv_default_anim_back_animation_delay">300</integer>
    <!-- BACKGROUND VIEW -->
    <color name="rcv_default_bg_color">#FFFFFF</color>
    <color name="rcv_default_bg_ring_color">#88FFFFFF</color>
    <dimen name="rcv_default_bg_ring_thickness">7dp</dimen>
    <!-- ICON VIEW -->
    <drawable name="rcv_default_icon_src">@drawable/record</drawable>
    <dimen name="rcv_default_fg_size">40dp</dimen>

    <!-- TEXT VIEW -->

    <dimen name="rcv_default_text_size">@dimen/text_small</dimen>
    <string name="rcv_default_text">Hold to record</string>
    <color name="rcv_default_text_color">#303F9F</color>

    <!-- UploadView BACKGROUND VIEW -->
    <color name="upload_bg_color_default">#FFFFFF</color>
    <color name="upload_bg_ring_color_first_default">@color/progress_half_blue</color>
    <color name="upload_bg_ring_color_second_default">@color/primary</color>
    <dimen name="upload_ring_thickness_default">3dp</dimen>

    <drawable name="upload_icon_src_default">@drawable/upload_view</drawable>

    <!-- DownloadingView BACKGROUND VIEW -->
    <color name="dw_bg_color_default">#FFFFFF</color>
    <color name="dw_bg_color_final_default">@color/accent_2</color>
    <color name="dw_bg_ring_color_first_default">@color/progress_half_blue</color>
    <color name="dw_bg_ring_color_second_default">@color/primary</color>
    <dimen name="dw_default_dg_ring_thickness_default">3dp</dimen>

    <!-- ICON VIEW -->
    <drawable name="dw_icon_src_default">@drawable/download_view</drawable>
    <dimen name="dw_icon_size_x_default">16dp</dimen>
    <dimen name="dw_icon_size_y_default">20dp</dimen>
</resources>
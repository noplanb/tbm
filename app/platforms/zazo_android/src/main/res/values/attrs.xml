<resources>

    <!--
         Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels.
    -->
    <declare-styleable name="ButtonBarContainerTheme">
<!--         <attr name="buttonBarStyle" format="reference" />
        <attr name="buttonBarButtonStyle" format="reference" /> -->
    </declare-styleable>

    <declare-styleable name="TextImageView">
        <attr name="textSize" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="src" format="reference"/>
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr name="circular_border_width" format="dimension"/>
        <attr name="circular_border_color" format="color"/>
        <attr name="circular_border_overlay" format="boolean"/>
        <attr name="circular_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RotationCircleView">
        <!--VIEW-->
        <attr name="rcv_fg_size" format="dimension" />
        <!-- ANIMATION  -->
        <attr name="rcv_anim_duration" format="integer" />
        <attr name="rcv_anim_back_animation_delay" format="integer" />
        <!-- BACKGROUND VIEW -->
        <attr name="rcv_bg_color" format="color" />
        <attr name="rcv_bg_ring_color" format="color" />
        <attr name="rcv_bg_ring_thickness" format="dimension" />
        <!-- ICON VIEW -->
        <attr name="rcv_icon_src" format="integer" />
        <attr name="rcv_icon_tint" format="color" />
        <!-- TEXT VIEW -->
        <attr name="rcv_text" format="string" />
        <attr name="rcv_text_size" format="dimension" />
        <attr name="rcv_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="UploadingView">
        <!--VIEW-->
        <!-- BACKGROUND VIEW -->
        <attr name="upload_bg_color" format="color" />
        <attr name="upload_bg_ring_color_first" format="color" />
        <attr name="upload_bg_ring_color_second" format="color" />
        <attr name="upload_ring_thickness" format="dimension" />
        <!--FOREGROUND VIEW-->
        <attr name="upload_icon_src" format="reference" />

    </declare-styleable>

    <declare-styleable name="DownloadingView">
        <!--VIEW-->
        <!-- BACKGROUND VIEW -->
        <attr name="dw_dg_ring_thickness" format="dimension" />
        <attr name="dw_bg_color" format="color" />
        <attr name="dw_bg_color_final" format="color" />
        <attr name="dw_bg_ring_color_first" format="color" />
        <attr name="dw_bg_ring_color_second" format="color" />
        <!-- ICON VIEW -->
        <attr name="dw_icon_src" format="integer" />
        <attr name="dw_icon_size_x" format="dimension" />
        <attr name="dw_icon_size_y" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowedStatusLayout">
        <attr name="solid_background_color" format="color"/>
        <attr name="gradient_center_color" format="color"/>
        <attr name="gradient_edge_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StatusIndicator">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="AutoResizeEditText">
        <attr name="min_text_size" format="dimension"/>
        <attr name="add_ellipsis" format="boolean"/>
    </declare-styleable>
</resources>

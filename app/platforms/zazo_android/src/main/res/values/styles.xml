<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:windowBackground">@color/bgn_main</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DebugTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/light_grey_new</item>
    </style>

    <style name="ZazoActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar">
    </style>

    <style name="darkButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dialog_title">
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="base_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0px</item>
    </style>

    <style name="ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0px</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/dialog_textcolor</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textColor">@color/contacts_name_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>
    <style name="AppTheme.SwitchCompat">
        <item name="android:background">@null</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>
    <style name="RegistrationFieldStyle">
        <item name="android:background">@drawable/registration_input_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/text_very_large</item>
    </style>
    <style name="SearchPanelIcon">
        <item name="android:layout_width">62dp</item> <!-- small_icon_size + 2*search_panel_margin -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/search_panel_margin</item>
        <item name="android:paddingLeft">@dimen/search_panel_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DevDivider"/>
    <style name="DevDivider.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="DevDivider.View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="DevDivider.Line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@drawable/dev_divider</item>
        <item name="android:layout_margin">@dimen/debug_options_margin</item>
    </style>
    <style name="DevButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:textColor">@color/dev_color</item>
        <item name="android:background">@drawable/dev_btn_bg</item>
        <item name="android:minWidth">100dp</item>
    </style>
    <style name="DevText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dev_color</item>
    </style>
    <style name="DevSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dev_color</item>
        <item name="android:layout_marginTop">@dimen/debug_options_margin</item>
    </style>

</resources>